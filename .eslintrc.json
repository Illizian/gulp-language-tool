{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "before": true,
        "beforeEach": true,
        "after": true,
        "afterEach": true,
        "describe": true,
        "context": true,
        "it": true
    },
    "rules": {
        "indent": [ 2, "tab" ],
        "linebreak-style": [ 2, "unix" ],
        "quotes": [ 2, "single" ],
        "semi": [ 2, "always" ],
        "no-console": 0
    }
}